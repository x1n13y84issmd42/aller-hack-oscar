{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules",
		"./out"
	],
	"compilerOptions": {
		"outDir": "./out",
		"baseUrl": "./src",
		"rootDir": "./src",

		"paths": {
			"fw/*": ["app/fw/*"],
			"HTTP/*": ["app/HTTP/*"],
			"lib/*": ["app/lib/*"],
			"main/*": ["app/main/*"],
			"streams/*": ["app/streams/*"],
			"streams": ["app/streams/index"],
			"system/*": ["app/system/*"],
			"app": ["app/app"],
			"main": ["app/main"],
			"migrate": ["app/migrate"],
			"tasks": ["app/tasks"],
			"boot": ["app/boot/index"],
		},

		"module": "commonjs",
		"moduleResolution": "node",

		"allowJs": false,
		"declaration": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
        
		"target": "es6",
		"jsx": "react",

		"lib": [
			"dom",
			"es2017"
		]
	}
}
