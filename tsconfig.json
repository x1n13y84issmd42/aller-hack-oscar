{
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./assets",
		"./doc",
		"./kubefiles",
		"./node_modules",
		"./out",
		"./resources",
		"./run",
		"./tmp"
	],
	"compilerOptions": {
		"outDir": "./out",
		"baseUrl": "./src",

		"paths": {
			"fw/*": ["app/fw/*"],
			"HTTP/*": ["app/HTTP/*"],
			"lib/*": ["app/lib/*"],
			"main/*": ["app/main/*"],
			"storage/*": ["app/storage/*"],
			"streams/*": ["app/lib/streams/*"],
			"streams": ["app/lib/streams/index"],
			"system/*": ["app/system/*"],
			"app": ["app/app"],
			"main": ["app/main"],
			"migrate": ["app/migrate"],
			"tasks": ["app/tasks"],
			"boot": ["app/boot/index"]
		},

		"allowJs": false,
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2017"
		],
		"jsx": "react",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "es6"
	}
}
